# test

# Name of binary executable 
outputname = Test
# the object files used
objects = test.o motordriver.o bcmwrapper.o naviberryio.o comm.o server.o
# compile flags
CFLAGS = -lbcm2835 -std=c++0x # -Werror -Wall

all: Test

Test: $(objects)
	g++ -o $(outputname) $(objects) $(CFLAGS) 
	@echo Binary executable : $(outputname)
motordriver.o:
	g++ -c ./include/motordriver.cpp -o ./motordriver.o $(CFLAGS)

bcmwrapper.o:
	g++ -c ./include/bcmwrapper.cpp -o ./bcmwrapper.o $(CFLAGS)
naviberryio.o:
	g++ -c ./include/naviberryio.cpp -o ./naviberryio.o $(CFLAGS)
server.o:
	g++ -c ./server.cpp -o ./server.o $(CFLAGS)
comm.o:
	g++ -c ./include/comm.cpp -o ./comm.o $(CFLAGS)

.PHONY : clean
clean : 
	$(warning Cleaning object files [ $(objects) ] )
	rm $(objects)

.PHONY : clean
cleanall : clean
	rm $(outputname)
